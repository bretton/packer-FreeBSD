{
  "variables": {
    "home": "{{env `HOME`}}"
  },
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "boot -s<enter>",
        "<wait15s>",
        "/bin/sh<enter><wait>",
        "mdmfs -s 100m md /tmp<enter><wait>",
        "dhclient -l /tmp/dhclient.lease.vtnet0 vtnet0<enter><wait5>",
        "fetch -o /tmp/installerconfig http://{{ .HTTPIP }}:{{ .HTTPPort }}/installerconfig<enter><wait5>",
        "FILESYSTEM={{ user `filesystem` }}<enter>",
        "export FILESYSTEM<enter>",
        "RC_CONF_FILE={{ user `rc_conf_file` }}<enter>",
        "export RC_CONF_FILE<enter>",
        "bsdinstall script /tmp/installerconfig<enter>"
      ],
      "boot_wait": "10s",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{ user `disk_size` }}",
      "export_opts": [
        "--manifest",
        "--vsys",
        "0",
        "--product",
        "FreeBSD-{{ user `revision` }}{{ user `branch` }}-{{ user `arch` }}{{ user `build_date` }}",
        "--producturl",
        "https://www.freebsd.org",
        "--description",
        "FreeBSD is an operating system used to power modern servers, desktops, and embedded platforms.",
        "--version",
        "{{ user `revision` }}{{ user `branch` }}"
      ],
      "guest_additions_mode": "disable",
      "guest_os_type": "{{ user `guest_os_type` }}",
      "hard_drive_interface": "sata",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "file:{{ user `mirror` }}/{{ user `directory` }}/ISO-IMAGES/{{ user `revision` }}/CHECKSUM.SHA256-FreeBSD-{{ user `revision` }}{{ user `branch` }}-{{ user `arch` }}{{ user `build_date` }}{{ user `git_commit` }}",
      "iso_interface": "sata",
      "iso_urls": [
        "file://iso/FreeBSD-{{ user `revision` }}{{ user `branch` }}-{{ user `arch` }}{{ user `build_date` }}{{ user `git_commit` }}-disc1.iso",
        "{{ user `mirror` }}/{{ user `directory` }}/ISO-IMAGES/{{ user `revision` }}/FreeBSD-{{ user `revision` }}{{ user `branch` }}-{{ user `arch` }}{{ user `build_date` }}{{ user `git_commit` }}-disc1.iso"
      ],
      "memory": "{{ user `memory` }}",
      "shutdown_command": "poweroff",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "1000s",
      "ssh_username": "root",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{ .Name }}",
          "--graphicscontroller",
          "vmsvga",
          "--nictype1",
          "virtio"
        ],
        [
          "storagectl",
          "{{ .Name }}",
          "--name",
          "IDE Controller",
          "--remove"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "box"
    },
    {
    "boot_command": [
      "<esc><wait>",
      "boot -s<enter>",
      "<wait20s>",
      "/bin/sh<enter><wait>",
      "mdmfs -s 100m md /tmp<enter><wait>",
      "dhclient -l /tmp/dhclient.lease.vtnet0 vtnet0<enter><wait5>",
      "fetch -o /tmp/installerconfig http://{{ .HTTPIP }}:{{ .HTTPPort }}/installerconfig<enter><wait5>",
      "FILESYSTEM={{ user `filesystem` }}<enter>",
      "export FILESYSTEM<enter>",
      "RC_CONF_FILE={{ user `rc_conf_file` }}<enter>",
      "export RC_CONF_FILE<enter>",
      "bsdinstall script /tmp/installerconfig<enter>"
    ],
    "boot_wait": "10s",
    "headless": true,
    "http_directory": "http",
    "iso_checksum": "file:{{ user `mirror` }}/{{ user `directory` }}/ISO-IMAGES/{{ user `revision` }}/CHECKSUM.SHA256-FreeBSD-{{ user `revision` }}{{ user `branch` }}-{{ user `arch` }}{{ user `build_date` }}{{ user `git_commit` }}",
    "iso_urls": [
      "file://iso/FreeBSD-{{ user `revision` }}{{ user `branch` }}-{{ user `arch` }}{{ user `build_date` }}{{ user `git_commit` }}-disc1.iso",
      "{{ user `mirror` }}/{{ user `directory` }}/ISO-IMAGES/{{ user `revision` }}/FreeBSD-{{ user `revision` }}{{ user `branch` }}-{{ user `arch` }}{{ user `build_date` }}{{ user `git_commit` }}-disc1.iso"
    ],
    "shutdown_command": "poweroff",
    "ssh_port": 22,
    "ssh_timeout": "1000s",
    "ssh_username": "root",
    "ssh_password": "vagrant",
    "accelerator": "kvm",
    "firmware": "efi",
    "use_pflash": true,
    "net_device": "virtio-net",
    "memory": "{{ user `memory` }}",
    "cpus": "{{ user `cpus` }}",
    "disk_interface": "virtio-scsi",
    "cdrom_interface": "virtio-scsi",
    "format": "qcow2",
    "disk_size": "{{ user `disk_size` }}",
    "skip_resize_disk": false,
    "output_directory": "freebsd-qemu",
    "type": "qemu",
    "qemuargs": [
      ["-m", "{{user `memory`}}"],
      ["-display", "none"],
      ["-machine", "q35,accel=kvm"],
      ["-cpu", "host"],
      ["-smp", "{{user `cpus`}}"],
      ["-device", "virtio-gpu-pci,virgl=on,xres=1024,yres=768"],
      ["-device", "virtio-scsi-pci,id=scsi0"],
      ["-device", "scsi-hd,drive=drive0,bootindex=0"],
      ["-device", "scsi-cd,drive=cdrom0,bootindex=1"],
      ["-drive", "if=pflash,format=raw,readonly,file=/usr/share/qemu/OVMF.fd"],
      ["-drive", "if=none,file=freebsd-qemu/box,id=drive0,cache=writeback,discard=ignore,format=qcow2,index=0,boot=on"],
      ["-drive", "if=none,file={{ user `home` }}/.cache/packer/90e228281994aa50ccdab1e0e6bcdce36a42a684.iso,media=cdrom,index=1,id=cdrom0"],
      ["-boot", ""]
    ],
    "qemu_img_args": {
      "resize": ["--shrink"]
    },
    "vm_name": "box"
    }
  ],
  "post-processors": [
    [
      {
        "output": "builds/FreeBSD-{{ user `revision` }}{{ user `branch` }}-{{ user `arch` }}{{ user `build_date` }}{{ user `git_commit` }}.box",
        "type": "vagrant",
        "vagrantfile_template": "vagrantfile.tpl"
      }
    ]
  ],
  "provisioners": [
    {
      "execute_command": "chmod +x {{ .Path }}; env {{ .Vars }} {{ .Path }}",
      "scripts": [
        "scripts/update.sh",
        "scripts/vagrant.sh",
        "scripts/zeroconf.sh",
        "scripts/ansible.sh",
        "scripts/vmtools.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ]
}
